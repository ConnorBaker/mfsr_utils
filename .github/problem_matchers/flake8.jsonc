// https://gredowski.com/blogging/2021/02/21/linting-whole-project-in-vscode.html
{
  "problemMatcher": [
    {
      "owner": "flake8",
      "pattern": [
        {
          "regexp": "^(.+):(\\d+):(\\d+): ((\\w+)\\d+) (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 4,
          "severity": 5,
          "message": 6
        }
      ]
    }
  ]
}